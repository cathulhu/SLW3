<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="30"
    android:columnCount="5"
    android:background="#53bd3e">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/debtInput"
        android:hint="Loan Balance"
        android:textAlignment="center"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/aprInput"
        android:textAlignment="center"
        android:hint="APR Percent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignBottom="@+id/addLoan"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Loan"
        android:id="@+id/addLoan"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/loanSelectbutton"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/loanSelectbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Type"
        android:id="@+id/loanSelectbutton"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_alignBottom="@+id/debtInput"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@android:id/list"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_below="@+id/aprInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Xs Loans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />


</RelativeLayout>