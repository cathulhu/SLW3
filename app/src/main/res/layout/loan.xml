<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="30"
    android:columnCount="5"
    android:background="#53bd3e">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/debtInput"
        android:hint="Loan Balance"
        android:textAlignment="center"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_below="@+id/whosLoans"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/whosLoans" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/aprInput"
        android:textAlignment="center"
        android:hint="APR Percent"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/debtInput"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/debtInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Loan"
        android:id="@+id/addLoan"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_alignTop="@+id/aprInput"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/whosLoans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Type"
        android:id="@+id/loanSelectbutton"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/debtInput"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/whosLoans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Xs Loans"
        android:id="@+id/whosLoans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Loan"
        android:id="@+id/button"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/listView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/addLoan" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/listView"
        android:layout_below="@+id/addLoan"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addLoan"
        android:layout_alignEnd="@+id/addLoan" />


</RelativeLayout>